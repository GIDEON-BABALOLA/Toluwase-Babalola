 <%- include("partials/second-headers.ejs") %>
 <div class="form-container " style="background-color: black;">
     <form action="/blog" method="POST" class="form-containerer" enctype="multipart/form-data">
    <p>
        <h6 style="text-align:center">BLOG</h6>
<input type="text" placeholder="Enter Your Name_" name="bloggername" class="text-boxe container-fluid" required></p>
<p>
<input type="text" placeholder="Enter Title Of Blog" name="blogtitle" class="text-boxe container-fluid" required>
</p>
<p style="display:none">
<input type="text" name="dater" value="<%= dataman %>">
</p>

<textarea type="text" placeholder="Write a Blog..." name="blogcontent" class="tap-box" rows="12"
maxlength="1001" autofocus="on" required></textarea>
    <p>
        <input type="file" accept="image/*" name="image" id="file" class="image-file"><i class="fa-solid fa-camera"></i>
<div style="text-align: center; padding: 0% 1%;">
    <button type="submit" class="subbot btn btn-lg btn-dark">
        SUBMIT</button>
<span style=" text-align: right;" class="content">
    Total Count:<span class="counter">0</span>/1000</span>
    </div>
</p>
 </form>
 </div>

    <%- include("partials/blog-footer.ejs") %>

 <script>
    const textcontain = document.querySelector(".tap-box");
    const countNum = document.querySelector(".counter");
    const countMan = document.querySelector(".content")
    textcontain.addEventListener("input", count);
  function count(){
    const number = textcontain.value.length;
    countNum.innerHTML = number;
    if( number <= 1000){
        countMan.classList.remove("admob");
    }
    else{
        countMan.classList.add("admob");
    }
  }
 </script>
